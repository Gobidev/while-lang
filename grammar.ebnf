Program    = Statement , { ';' , Statement } , [ ';' ] ;
Statement  = While | Assignment ;
While      = 'WHILE' , var , '!=' , '0' , 'DO' , Program , 'END' ;
Assignment = var , ':=' , var , [ ( '+' | '-' ) , CONST ] ;

var = 'x' , ( '0'
            | NON_ZERO , { DIGIT } ) ;

CONST    = '0' | '1' ;
NON_ZERO = '1' | '2' | '3' | '4' | '5' | '6' | '7' | '8' | '9' ;
DIGIT    = '0' | NON_ZERO ;
